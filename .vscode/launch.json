{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "hub",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/kobs",
      "args": [ "hub" ],
      "env": {
        "KOBS_CONFIG": "../../deploy/docker/kobs/hub.yaml"
      },
      "envFile": ".env"
    },
    {
      "name": "satellite",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/kobs",
      "args": [
        "--log.level=debug",
        "--satellite.config=../../deploy/docker/kobs/satellite.yaml",
        "--satellite.token=unsecuretoken"
      ]
    },
    {
      "name": "app",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/plugins/app",
      "sourceMaps": true
    },
    {
      "name": "plugin",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3001",
      "webRoot": "${workspaceFolder}/plugins",
      "sourceMaps": true
    }
  ]
}
