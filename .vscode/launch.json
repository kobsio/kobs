{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "hub",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/kobs",
      "args": [
        "--log.level=debug",
        "--hub.config=../../deploy/docker/kobs/config.yaml",
        "--app.assets=''"
      ]
    },
    {
      "name": "satellite",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/kobs",
      "args": [
        "--log.level=debug",
        "--satellite.config=../../deploy/docker/kobs/config.yaml",
        "--satellite.plugins=../../bin/plugins",
        "--satellite.token=unsecuretoken"
      ]
    },
    {
      "name": "app",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/plugins/app",
      "sourceMaps": true
    },
    {
      "name": "plugin",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3001",
      "webRoot": "${workspaceFolder}/plugins",
      "sourceMaps": true
    }

  ]
}
