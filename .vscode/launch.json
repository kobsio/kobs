{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/kobs",
      "args": [
        "--log.level=trace",
        "--config=../../deploy/docker/kobs/config.yaml",
        "--app.assets=../../app/build",
        "--development"
      ]
    },
    {
      "name": "App",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/app/src",
      "sourceMaps": true
    },
    {
      "name": "Plugin",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3001",
      "webRoot": "${workspaceFolder}/app/src",
      "sourceMaps": true
    }

  ]
}
