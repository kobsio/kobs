{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "hub",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/kobs",
      "args": [ 
        "hub",
        "--config",
        "../../config.yaml"
      ],
      "envFile": ".env"
    },
    {
      "name": "cluster",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/kobs",
      "args": [
        "cluster",
        "--config",
        "../../config.yaml"
      ],
      "envFile": ".env"
    },
    {
      "name": "watcher",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/kobs",
      "args": [
        "watcher",
        "--config",
        "../../config.yaml"
      ],
      "envFile": ".env"
    },
    {
      "name": "app",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/plugins/app",
      "sourceMaps": true
    },
    {
      "name": "plugin",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3001",
      "webRoot": "${workspaceFolder}/plugins",
      "sourceMaps": true
    }
  ]
}
